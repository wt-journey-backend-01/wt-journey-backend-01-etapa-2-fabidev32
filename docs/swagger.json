{
  "openapi": "3.0.0",
  "info": {
    "title": "Swagger with Express",
    "description": "Primeira API construída e documentada, estruturada a partir da trilha de desenvolvimento do projeto Web Tech",
    "termsOfService": "http://localhost:3000/terms",
    "version": "1.0.0",
    "contact": {
      "name": "Fabia Rodrigues de Oliveira",
      "email": "fabia9065@gmail.com"
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000/v1",
      "description": "Ambiente de desenvolvimento"
    },
    {
      "url": "http://www.crudJourney.com/v2",
      "description": "Ambiente de produção"
    }
  ],
  "paths": {
    "/posts": {
      "get": {
        "summary": "Retorna todos os posts",
        "description": "Todos os posts",
        "tags": ["Posts"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna todos os posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": [
                    {
                      "id": 1,
                      "title": "Post 1",
                      "description": "Conteúdo do post 1"
                    },
                    {
                      "id": 2,
                      "title": "Post 2",
                      "description": "Conteúdo do post 2"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Nenhum post foi encontrado"
          }
        }
      },
      "post": {
        "summary": "Cria um novo post",
        "tags": ["Posts"],
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "Post criado com sucesso",
                    "post": {
                      "id": 1,
                      "title": "Título",
                      "description": "Conteúdo"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/posts/{id}": {
      "get": {
        "summary": "Retorna todos os posts",
        "description": "Todos os posts",
        "tags": ["Posts"],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Retorna todos os posts",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "example": [
                    {
                      "id": 1,
                      "title": "Post 1",
                      "description": "Conteúdo do post 1"
                    },
                    {
                      "id": 2,
                      "title": "Post 2",
                      "description": "Conteúdo do post 2"
                    }
                  ]
                }
              }
            }
          },
          "404": {
            "description": "Nenhum post foi encontrado"
          }
        }
      },
      "post": {
        "summary": "Cria um novo post",
        "tags": ["Posts"],
        "responses": {
          "201": {
            "description": "Post criado com sucesso",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "example": {
                    "message": "Post criado com sucesso",
                    "post": {
                      "id": 1,
                      "title": "Título",
                      "description": "Conteúdo"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Post": {
        "type": "object",
        "required": ["title", "content"],
        "properties": {
          "id": {
            "type": "number"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  },

  "securitySchemes": {
    "bearerAuth": {
      "type": "http",
      "scheme": "bearer"
    }
  }
}
